<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/totalView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context="com.example.michael.palindromchecker.MainActivity">

    <TextView
        android:id="@+id/headline"
        android:layout_width="178dp"
        android:layout_height="42dp"
        android:text="Palindrom ?"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/eingabe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099" />

    <TextView
        android:id="@+id/eingabe"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:text="Eingabe String:"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/headline"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/eingabefeld"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="String >= 5"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/eingabe"
        app:layout_constraintTop_toBottomOf="@+id/headline" />

    <Button
        android:id="@+id/check"
        android:layout_width="332dp"
        android:layout_height="59dp"
        android:text="Check String"
        app:layout_constraintBottom_toBottomOf="@+id/output"
        app:layout_constraintTop_toBottomOf="@+id/eingabe"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/output"
        android:layout_width="329dp"
        android:layout_height="39dp"
        android:hint="Output Information"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/check"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
